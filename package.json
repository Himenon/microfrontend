{
  "name": "micro-frontend",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "author": "Himenon",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "commit": "npx git-cz",
    "format": "yarn lint --fix && prettier --write \"**/*.{ts,tsx,js,jsx,json,yml,yaml,html,md}\"",
    "lint": "eslint -c ./.eslintrc.js 'packages/**/*.{ts,tsx}'",
    "lint:fix": "yarn lint --fix",
    "test": "lerna run test",
    "version_up": "lerna version --yes"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "resolutions": {
    "@types/webpack": "4.41.17",
    "@types/webpack-dev-server": "3.11.0"
  },
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@babel/preset-env": "^7.10.2",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/clean-webpack-plugin": "^0.1.3",
    "@types/gh-pages": "^2.2.0",
    "@types/html-webpack-plugin": "^3.2.3",
    "@types/jest": "^25.2.3",
    "@types/mini-css-extract-plugin": "^0.9.1",
    "@types/react": "^16.9.35",
    "@types/react-dom": "^16.9.8",
    "@types/react-router-dom": "^5.1.5",
    "@types/webpack": "4.41.17",
    "@types/webpack-dev-server": "3.11.0",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "commitizen": "^4.1.2",
    "conventional-changelog-angular-all": "^1.7.0",
    "cross-env": "^7.0.2",
    "dependency-cruiser": "^9.4.0",
    "eslint": "^7.1.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.4",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "jest-watch-yarn-workspaces": "^1.1.0",
    "lerna": "^3.22.0",
    "lint-staged": "^10.2.8",
    "prettier": "^2.0.5",
    "serve": "^11.3.1",
    "sort-package-json": "^1.44.0",
    "style-loader": "^1.2.1",
    "styled-components": "^5.1.1",
    "terser-webpack-plugin": "^3.0.3",
    "ts-jest": "^26.1.0",
    "ts-loader": "^7.0.5"
  }
}
